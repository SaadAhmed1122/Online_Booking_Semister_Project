<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText_proname_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Product Name" />

    <EditText
        android:id="@+id/editText_pro_dec_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Product Description" />

    <Spinner
        android:id="@+id/spinner_unit_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/units" />

    <EditText
        android:id="@+id/editTect_product_pri_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Product Price" />

    <EditText
        android:id="@+id/editText_ava_stock_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Available Stock" />

    <Button
        android:id="@+id/button_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />

    <Button
        android:id="@+id/Delete"
        android:onClick="showdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Data" />


</LinearLayout>